{
  "extends": [
    "solhint:recommended"
  ],
  "rules": {
    "prettier/prettier": "error",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "quotes": [
      "warn",
      "single"
    ],
    "compiler-version": [
      "error",
      "^0.8.0"
    ]
  },
  "plugins": [
    "prettier"
  ]
}
